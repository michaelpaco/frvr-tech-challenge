<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_native_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/native_logs"/>

        <Button
            android:id="@+id/btn_local_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/local_notifications"/>

        <Button
            android:id="@+id/btn_lifecycle_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lifecycle_events"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>